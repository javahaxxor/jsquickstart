{
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
 "ecmaFeatures": {
    "modules": true,
    "spread" : true,
    "restParams" : true
  },
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": "google",
  "plugins": [
    "standard",
    "promise"
  ],
  "rules": {
    "comma-dangle": ["error", "never"],
    "indent": ["error", 2],
    "max-len": ["error", 180],
    "no-console": ["error"],
    "no-shadow": ["error", {"hoist": "all"}],
    "no-trailing-spaces": ["error"],
    "require-jsdoc": ["off"]
  }
}
